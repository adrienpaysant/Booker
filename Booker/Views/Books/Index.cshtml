
@model Booker.Models.BookGenreViewModel

@{
    ViewData["Title"] = "List";
}

<h1>List of all Books</h1>

<form asp-controller="Books" asp-action="Index" method="get">
    <p>
        <select asp-for="BookCategory" asp-items="Model.Categories">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<div class="d-flex flex-wrap" style="text-align:center">
    @foreach(var item in Model.Books)
    {
        <a asp-action="Details" asp-route-id="@item.ISBN" class="m-2">
            <img src="@item.Image" style="width:15vw;max-height:50vh" />
            <p>@Html.DisplayFor(modelItem => item.Title)</p>
        </a>
    }
</div>

